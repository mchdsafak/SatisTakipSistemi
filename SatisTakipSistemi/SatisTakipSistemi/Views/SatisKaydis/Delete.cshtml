@model SatisTakipSistemi.Models.SatisKaydi

@{
    ViewData["Title"] = "Kaydı Sil";
}

<h1 class="h3 mb-4 text-gray-800">Kayıt Silme İşlemi</h1>

<div class="row">
    <div class="col-lg-6">

        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Bu kaydı silmek istediğinize emin misiniz?</h6>
            </div>
            <div class="card-body">

                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    Dikkat: Bu işlem geri alınamaz! Aşağıdaki firma bilgileri sistemden tamamen silinecektir.
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Firma Adı:</dt>
                    <dd class="col-sm-8 font-weight-bold">@Model.FirmaAdi</dd>

                    <dt class="col-sm-4">Yetkili Telefon:</dt>
                    <dd class="col-sm-8">@Model.FirmaTelefon</dd>

                    <dt class="col-sm-4">Sorumlu Personel:</dt>
                    <dd class="col-sm-8">@Model.SorumluSatisci</dd>

                    <dt class="col-sm-4">Son Durum:</dt>
                    <dd class="col-sm-8">
                        <span class="badge badge-secondary">@Model.Durum</span>
                    </dd>

                    <dt class="col-sm-4">Görüşme Tarihi:</dt>
                    <dd class="col-sm-8">@Model.Tarih.ToString("dd.MM.yyyy HH:mm")</dd>
                </dl>

                <hr>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-trash"></i>
                        </span>
                        <span class="text">Evet, Sil</span>
                    </button>

                    <a asp-action="Index" class="btn btn-secondary btn-icon-split ml-2">
                        <span class="icon text-white-50">
                            <i class="fas fa-times"></i>
                        </span>
                        <span class="text">İptal Et</span>
                    </a>
                </form>

            </div>
        </div>

    </div>
</div>